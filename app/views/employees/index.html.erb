
<style>
  /* Additional CSS for dropdown button */
  .dropdown-menu {
    min-width: auto;
  }
.header{
  text-align: center;
    margin-bottom: 30px;
    margin-top: 20px;
}
  /* Centering the table */
  .table-container {
    margin: 20px auto;
    width: 80%;
    max-width: 800px;
  }

  /* Styling for the create button */
  .create-button {
    text-align: center;
    margin-top: 20px;
  }

  /* Styling for the "Create New Employee" button */
  .create-button a {
    background-color: #e9ecef; /* Light Gray */
    color: #333; /* Dark Gray */
    border: none;
    padding: 14px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    border-radius: 5px;
  }

  .create-button a:hover {
    background-color: #f1f1f1; /* Lighter Gray */
    color: #333; /* Dark Gray */
  }

  /* Styling for alternating row colors */
  .table tbody tr:nth-child(odd) {
    background-color: #f2f2f2; /* Light Gray */
  }

  /* Styling for table borders */
  .table th,
  .table td {
    border: 1px solid #ddd;
    padding: 8px;
  }

  /* Styling for table header */
  .table th {
    background-color: #007bff; /* Blue */
    color: white;
    text-align: center;
  }

  /* Styling for table actions dropdown */
  .dropdown-toggle {
    background-color: #6c757d; /* Gray */
    color: white;
    border: none;
  }

  .dropdown-toggle:hover {
    background-color: #5a6268; /* Darker Gray */
  }

  .dropdown-menu {
    background-color: #f8f9fa; /* Lighter Gray */
    border: 1px solid rgba(0, 0, 0, 0.15);
  }

  .dropdown-menu a {
    color: #333; /* Dark Gray */
  }

  .dropdown-menu a:hover {
    background-color: #cce5ff; /* Light Blue */
  }

</style>

<div class="table-container">
  <h1 class="header">Employee Information</h1>

  <table class="table">
    <thead>
      <tr>
        <th style="width: 20%;">employee ID</th>
        <th style="width: 20%;">First Name</th>
        <th style="width: 20%;">Middle Name</th>
        <th style="width: 20%;">Surname</th>
        <th style="width: 20%;">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.f_name %></td>
          <td><%= employee.m_name %></td>
          <td><%= employee.surname %></td>
          <td>
            <div class="btn-group">
              <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Actions
              </button>
              <div class="dropdown-menu">
                <%= link_to 'Edit', edit_employee_path(employee), class: "dropdown-item" %>
                <%= link_to 'View Info', employee_path(employee), class: "dropdown-item" %>
                <%= link_to 'Delete', employee_path(employee), method: :delete, class: "dropdown-item", data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<ul>
    <li class="create-button" style="list-style-type: none;">
        <%= link_to "Create New Employee Here", new_employee_path %>
        <%= link_to 'Documents of all Employees', documents_path, class: "button" %>
    </li>
</ul>
</div>

<%= flash[:notice]%>

<style>
  /* Style for the header */
    /* Style for the navigation bar */
    nav ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      background-color: #f1f1f1; /* Light Gray */
      overflow: hidden;
    }

    nav li {
      float: left;
    }

    nav li a {
      display: block;
      color: black;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
    }

    /* Style for the "Create New Employee" button */
    .create-button a {
      background-color: #4CAF50; /* Green */
      color: white;
      border: none;
      padding: 14px 20px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      border-radius: 5px;
    }
  .header {
    font-size: 36px;
    text-align: center;
    margin-top: 20px;
    margin-bottom: 20px;
    color: #333; /* Dark Gray */
    font-family: Arial, sans-serif;
    text-transform: uppercase;
  }

  /* Style for the table */
  .table {
    width: 100%;
    border-collapse: collapse;
    margin: 0 auto; /* Center the table horizontally */
  }

  /* Style for table headings */
  .table th {
    background-color: #007bff; /* Blue */
    color: #fff; /* White */
    padding: 10px;
    text-align: center; /* Center the heading text */
  }

  /* Style for table data */
  .table td {
    padding: 10px;
    text-align: center; /* Center the data */
    border-bottom: 1px solid #ddd; /* Light Gray */
  }

  /* Style for table data alternate rows */
  .table tr:nth-child(even) {
    background-color: #f2f2f2; /* Light Gray */
  }
</style>

<h1 class="header">Employee Information</h1>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Middle Name</th>
      <th>Surname</th>
      <th>action</th>
      <th>Information</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.f_name %></td>
        <td><%= employee.m_name %></td>
        <td><%= employee.surname %></td>
        <td > <%= link_to 'edit', edit_employee_path(employee) %></td>
        <td > <%= link_to 'view info', employee_path(employee) %></td>
        <td ><%= link_to 'Delete',employee_path(employee), method: :delete,  class: "btn btn-danger",data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>
    
  </tbody>
</table>
<ul>
    <li class="create-button"><%= link_to "Create New Employee Here", new_employee_path %></li>
</ul>